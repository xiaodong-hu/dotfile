{
    "layer": "top",
    "position": "top",
    "margin-top": 0.2,
    "height": 32,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "custom/power",
        "custom/sentense"
    ],
    // std modules below
    "hyprland/workspaces": {
        "format": "{icon}",
        // "on-click": "activate",
        "persistent-workspaces": {
            "*": 10 // show full workspaces
        },
        "format-icons": {
            // unicode thin spaces are added to adjust the display
            "1": " ÔÖ©|ÔÇõ‚Äâ",
            "2": " ÔáÅ|ÔÖ¨‚Äâ",
            "3": "  Ôâ©  ",
            "4": "  ÔÅª  ",
            "5": "  ùû¢  ",
            "6": " Ôâá|ÔÄæ ",
            "7": " Ôéµ|ÔÖÑ ",
            "8": " ÔÜò|Ôáó|ÔÖæ|Ôáò ",
            "9": " ÔÖº|ÔÖ∫ ",
            "10": " ÔÄì "
        },
        "show-special": true // show magic workspace
        // "format": "{icon}",
        // // "on-click": "activate",
        // "persistent-workspaces": {
        //     "*": 10 // show full workspaces
        // },
        // "format-icons": {
        //     "1": "ÔÖ© |ÔÇõ",
        //     "2": "ÔáÅ |ÔÖ¨",
        //     "3": "ÔÑ°",
        //     "4": "ÔÜº",
        //     "5": "ÔÅµ",
        //     // "urgent": "ÔÅ™",
        //     // "active": "ÔÜí",
        //     // "default": "ÔÑë"
        // },
        // "sort-by-number": true
    },
    "clock": {
        "format": "{:%m-%d %a %H:%M}",
        // "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "interval": 2,
        "format": "CPU {avg_frequency:0.2f}GHz"
    },
    // customized modules below
    "memory": {
        "interval": 2.5,
        "format": "MEM {used:0.1f}G/{total:.0f}G "
    },
    "custom/power": {
        "exec": "bash $HOME/.config/waybar/modules/power.sh",
        "interval": 5
    },
    "custom/sentense": {
        "format": " - Think Like Electrons "
        // "format": "‰∫ëË°åÈõ®ÊñΩ ÂìÅÁâ©ÊµÅÂΩ¢"
    }
}
